{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Termin",
  "description": "Schema fuer ein Termin-Objekt",
  "type": "object",
  "required": ["patient_id", "arzt_id", "datum", "uhrzeit"],
  "properties": {
    "patient_id": {
      "type": "integer",
      "minimum": 1
    },
    "arzt_id": {
      "type": "integer",
      "minimum": 1
    },
    "datum": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "uhrzeit": {
      "type": "string",
      "pattern": "^[0-9]{2}:[0-9]{2}$"
    },
    "dauer_minuten": {
      "type": "integer",
      "minimum": 5,
      "maximum": 240,
      "default": 15
    },
    "grund": {
      "type": "string",
      "maxLength": 500
    },
    "status": {
      "type": "string",
      "enum": ["geplant", "bestaetigt", "abgesagt", "abgeschlossen"]
    }
  },
  "additionalProperties": false
}
