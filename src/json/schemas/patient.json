{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Patient",
  "description": "Schema fuer ein Patient-Objekt",
  "type": "object",
  "required": ["vorname", "nachname", "geburtsdatum", "versicherungsnummer", "krankenkasse"],
  "properties": {
    "vorname": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "nachname": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "geburtsdatum": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "versicherungsnummer": {
      "type": "string",
      "minLength": 1,
      "maxLength": 20
    },
    "krankenkasse": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "telefon": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "strasse": {
      "type": "string"
    },
    "plz": {
      "type": "string",
      "pattern": "^[0-9]{5}$"
    },
    "stadt": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
