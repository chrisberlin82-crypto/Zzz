# ===========================================
# Vente CRM - Konfiguration
# ===========================================

# Umgebung
NODE_ENV=production
PORT=3001

# Datenbank (PostgreSQL)
# WICHTIG: Diese Passwoerter werden beim ersten Deploy automatisch generiert.
# Manuell aendern NUR BEVOR der erste Deploy laeuft!
POSTGRES_DB=vente_crm
POSTGRES_USER=vente_user
POSTGRES_PASSWORD=vente_secure_password_2024
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://vente_user:vente_secure_password_2024@postgres:5432/vente_crm

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=vente_redis_2024

# JWT Sicherheit
JWT_SECRET=CHANGE_ME_jwt_secret_mindestens_32_zeichen_lang
JWT_REFRESH_SECRET=CHANGE_ME_refresh_secret_mindestens_32_zeichen
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
# CORS: * = allow all (safe behind nginx proxy), or set specific origin
CORS_ORIGIN=*

# Bcrypt
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT=5

# Datei-Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,xls,csv,doc,docx
UPLOAD_PATH=/app/uploads

# Geocoding (OpenStreetMap Nominatim)
NOMINATIM_URL=https://nominatim.openstreetmap.org
GEOCODING_RATE_LIMIT=1000
GEOCODING_USER_AGENT=Vente CRM v1.0

# Karten
MAP_DEFAULT_CENTER_LAT=51.2277
MAP_DEFAULT_CENTER_LON=6.7735
MAP_DEFAULT_ZOOM=13

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
AUDIT_LOG_ENABLED=true
AUDIT_RETENTION_DAYS=3650

# Backup
BACKUP_RETENTION_DAYS=30
BACKUP_INCLUDE_UPLOADS=true

# E-Mail (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=Vente CRM <noreply@vente-projekt.de>
